<p id="notice"><%= notice %></p>

<h1>Users</h1>
<div class="well">
<%= link_to "New User", new_user_path, class: "btn btn-default" %>
</div>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% if @users.count == 0 %>
      <tr>
        <td colspan="3">
          No users found.  Click the button above to add a new one.
        </td>
      </tr>
    <% else %>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %></td>
          <td><%= link_to user.email, user %></td>
          <td><%= link_to 'Show', user, class: "btn btn-default" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-default" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>