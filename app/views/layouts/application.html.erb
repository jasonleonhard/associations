      </div>

      <div class="btn-group">
        <button type="button" class="navbar-inverse navbar-brand dropdown-toggle" data-toggle="dropdown">Users & Posts (with Comments)
          <span class="caret"></span>
        </button>
        <!-- Nesting buttons: Finally use dropdown-menu and add actual links -->
        <!-- <ul class="nav navbar-nav"> -->
        <ul class="dropdown-menu">
          <li><%= link_to "Users", users_path %></li>
          <li><%= link_to "Posts", posts_path %></li>
        </ul>
      </div>

      <div class="btn-group">
        <button type="button" class="navbar-inverse navbar-brand dropdown-toggle" data-toggle="dropdown">Accounts Customers & Orders
          <span class="caret"></span>
        </button>
        <!-- Nesting buttons: Finally use dropdown-menu and add actual links -->
        <!-- <ul class="nav navbar-nav"> -->
        <ul class="dropdown-menu">
          <li><%= link_to "Accounts", accounts_path %></li>
          <li><%= link_to "Customers", customers_path %></li>
          <li><%= link_to "Orders", orders_path %></li>
        </ul>
      </div>
    </div>
  </nav>

