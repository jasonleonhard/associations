  <nav class="navbar navbar-inverse navbar-static-top">
    <div class="container">
      
      <!-- Nesting buttons: First group and assign to the following dropdown  -->
      <div class="btn-group">
        <button type="button" class="navbar-inverse navbar-brand dropdown-toggle" data-toggle="dropdown">People & Businesses
          <span class="caret"></span>
        </button>
        <!-- Nesting buttons: Finally use dropdown-menu and add actual links -->
        <!-- <ul class="nav navbar-nav"> -->
