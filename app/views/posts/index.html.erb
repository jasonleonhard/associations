<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<div class="well">
<%= link_to "New post", new_post_path, class: "btn btn-default" %>
</div>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% if @posts.count == 0 %>
      <tr>
        <td colspan="3">
          No posts found.  Click the button above to add a new one.
        </td>
      </tr>
    <% else %>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post %></td>
          <td><%= link_to post.text, post %></td>
          <td><%= link_to 'Show', post, class: "btn btn-default" %></td>
          <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-default" %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>