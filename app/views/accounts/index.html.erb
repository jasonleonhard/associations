<p id="notice"><%= notice %></p>

<h1>Accounts</h1>
<div class="well">
<%= link_to "New account", new_account_path, class: "btn btn-default" %>
</div>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% if @accounts.count == 0 %>
      <tr>
        <td colspan="3">
          No accounts found.  Click the button above to add a new one.
        </td>
      </tr>
    <% else %>
      <% @accounts.each do |account| %>
        <tr>
          <td></td>
          <td></td>
<!--      <td>< % = link_to account.title, account % ></td>
          <td>< % = link_to account.text, account % ></td> -->
          <td><%= link_to 'Show', account, class: "btn btn-default" %></td>
          <td><%= link_to 'Edit', edit_account_path(account), class: "btn btn-default" %></td>
          <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
